<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MysqlContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.sa.server.util.generator.SampleMapper"/>
        </plugin>
        <plugin type="com.sa.server.util.generator.LombokPlugin">
            <property name="hasLombok" value="true"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/shop_anywhere?useSSL=false"
                        userId="root"
                        password="root">
        </jdbcConnection>
        <!-- 对于生成的pojo所在包 -->
        <javaModelGenerator targetPackage="com.sa.server.pojo" targetProject="src/main/java"/>
        <!-- 对于生成的mapper所在目录 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>
        <!-- 配置mapper对应的dao -->
        <javaClientGenerator targetPackage="com.sa.server.dao" targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table tableName="attribute"></table>
		<table tableName="belong"></table>
		<table tableName="buy"></table>
		<table tableName="card"></table>
		<table tableName="entity"></table>
		<table tableName="have"></table>
		<table tableName="leased_card"></table>
		<table tableName="model"></table>
		<table tableName="store"></table>
		<table tableName="value"></table>

    </context>
</generatorConfiguration>