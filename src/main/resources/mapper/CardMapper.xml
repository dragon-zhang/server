<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sa.server.dao.CardMapper">
    <resultMap id="BaseResultMap" type="com.sa.server.pojo.Card">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="aid" property="aid" jdbcType="BIGINT"/>
        <result column="id" property="id" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="issue_time" property="issueTime" jdbcType="TIMESTAMP"/>
        <result column="issue_version" property="issueVersion" jdbcType="VARCHAR"/>
        <result column="grade" property="grade" jdbcType="VARCHAR"/>
        <result column="dr" property="dr" jdbcType="BIT"/>
    </resultMap>

    <select id="queryByVersionAndGrade" resultType="com.sa.server.pojo.Card">
        select *
        from card
        <where>
            <if test="version !=null">
                issue_version = #{version}
            </if>
            <if test="grade !=null">
                and grade = #{grade}
            </if>
        </where>
    </select>

    <select id="getDetails" resultType="com.sa.server.pojo.CardDetail">
        select card.id,`user`.id,`user`.name,issue_time,issue_version,grade,sname,location,scope
        from card,`user`
        right join belong on belong.user_id=`user`.id
        right join store on store.id=belong.store_id
        <where>
            <if test="location !=null">
                location = #{location}
            </if>
            <if test="sname !=null">
                and sname = #{sname}
            </if>
            <if test="scope !=null">
                and scope = #{scope}
            </if>
            <if test="version !=null">
                and issue_version = #{version}
            </if>
            <if test="grade !=null">
                and grade = #{grade}
            </if>
        </where>
    </select>

</mapper>